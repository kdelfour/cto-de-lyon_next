---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";

interface Props {
  data: {
    title: string;
    content: string[];
    action: {
    title: string;
      url: string;
    };
  };
}
const { data } = Astro.props;
---

<section id="hero">
  <div
    class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
  >
    <div class="mt-0 flex lg:hidden justify-center">
      <Image
        src={logo}
        alt="Logo de la communauté des CTO de Lyon"
        class="w-2/3"
        decoding="async"
        loading="lazy"
      />
    </div>
    <div class="mr-auto place-self-center lg:col-span-7">
      <h1
        class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl"
        set:html={data.title}
      />
      <p class="max-w-2xl mb-6 font-light lg:mb-8 md:text-lg lg:text-xl">
        {data.content}
      </p>

      <a
        href={data.action.url}
        class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center border border-gray-300 rounded-lg bg-blue-600 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800"
        target="_blank"
      >
        {data.action.title}
      </a>
    </div>
    <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
      <Image src={logo} alt="Logo de la communauté des CTO de Lyon" />
    </div>
  </div>
</section>
