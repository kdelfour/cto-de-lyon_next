---
interface Props {
  data:{

    title: string;
    content: string[];
    items: {
      title: string;
      content: string;
      icon: string;
    }[];
  }
}
const { data } = Astro.props;
---

<section id="mission" class="rounded-lg bg-gray-100 dark:bg-gray-800">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="max-w-screen-lg mb-8 lg:mb-16">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold"
        set:html={data.title}
      />
      <p class="sm:text-xl">
        {data.content}
      </p>
    </div>
    <div
      class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0"
    >
      {
        data.items.map((item: { icon: any; title: any; content: unknown }) => (
          <div>
            <div
              class="flex justify-center items-center mb-4 w-10 h-10 rounded-full bg-primary-100 lg:h-12 lg:w-12 dark:bg-primary-900"
              set:html={item.icon}
            />
            <h3 class="mb-2 text-xl font-bold" set:html={item.title} />
            <p>{item.content}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
