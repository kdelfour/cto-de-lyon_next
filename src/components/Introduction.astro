---
interface Props {
  data:{
    title: string;
    content: string[];
  }
}
const { data} = Astro.props;
---

<section>
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="max-w-screen-lg">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold"
        set:html={data.title}
      />
      {
        data.content.map((content: unknown) => (
          <p class="mb-8 font-light sm:text-xl">{content}</p>
        ))
      }
    </div>
  </div>
</section>
